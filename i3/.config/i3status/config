general {
        colors = false
        interval = 5
}

order += "volume master"
order += "battery all"
order += "tztime local"

volume master {
        format = "volume: %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery all {
        format = "battery: %remaining"
        last_full_capacity = true
        low_threshold = 15
        threshold_type = percentage
        hide_seconds = true
}

tztime local {
        format = "clock: %H:%M:%S"
}
